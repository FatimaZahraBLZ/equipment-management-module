<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Assignment Wizard -->
  <record id="equipment_assignment_wizard_form" model="ir.ui.view">
    <field name="name">equipment.assignment.wizard.form</field>
    <field name="model">equipment.assignment.wizard</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="equipment_id"/>
            <field name="action_type" widget="radio"/>
          </group>
          <group>
            <field name="employee_id"/>
            <field name="assignment_date"/>
          </group>
          <field name="note" placeholder="Notes ou remarques..."/>
        </sheet>
        <footer>
          <button name="action_apply" string="Appliquer" type="object" class="btn-primary"/>
          <button string="Annuler" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <!-- Return Wizard -->
  <record id="equipment_return_wizard_form" model="ir.ui.view">
    <field name="name">equipment.return.wizard.form</field>
    <field name="model">equipment.return.wizard</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <h2>Retour d'Équipement</h2>
          <group>
            <field name="equipment_id"/>
            <field name="employee_id"/>
          </group>
          <group>
            <field name="return_date"/>
            <field name="return_condition" widget="radio"/>
          </group>
          <group invisible="return_condition != 'damaged'">
            <field name="damage_description" placeholder="Décrivez les dommages..."/>
          </group>
          <field name="note" placeholder="Notes ou remarques..."/>
        </sheet>
        <footer>
          <button name="action_apply" string="Retourner" type="object" class="btn-primary"/>
          <button string="Annuler" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

</odoo>